<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/squad_logo" />

    <EditText
        android:id="@+id/etInputPhoneNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:width="300dp"
        android:hint="@string/enter_phone_number_and_save"
        android:layout_above="@+id/btnSavePhoneNum"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnSavePhoneNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save_phone_number"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorText"
        android:background="@color/colorPrimary"/>

</RelativeLayout>