<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvHeadingMatchDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="142dp"
        android:text="You have been added to this match by: "
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvAddedByMatchDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHeadingMatchDisplay"
        android:layout_centerHorizontal="true"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvMatchTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Match Time:"
        android:layout_below="@+id/tvAddedByMatchDisplay"
        android:layout_toStartOf="@+id/tvAddedByMatchDisplay" />

    <TextView
        android:id="@+id/tvShowMacthTIme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvMatchTime"
        android:layout_toEndOf="@+id/tvAddedByMatchDisplay"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvMatchDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Match Day:"
        android:layout_below="@+id/tvMatchTime"
        android:layout_alignEnd="@+id/tvMatchTime" />

    <TextView
        android:id="@+id/tvShowMatchDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/tvShowMacthTIme"
        android:layout_alignStart="@+id/tvShowMacthTIme" />

    <TextView
        android:id="@+id/tvCanYouPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Can You Play?"
        android:layout_alignBaseline="@+id/switchPlay"
        android:layout_alignBottom="@+id/switchPlay"
        android:layout_alignEnd="@+id/tvMatchDay" />

    <Switch
        android:id="@+id/switchPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvShowMatchDay"
        android:layout_alignStart="@+id/tvShowMatchDay" />

    <Button
        android:id="@+id/btnPlayingConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/switchPlay"
        android:text="Update Response" />

</RelativeLayout>