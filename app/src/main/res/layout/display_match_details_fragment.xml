<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvHeadingMatchDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="142dp"
        android:text="You have been added to this match by: "
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvAddedByMatchDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHeadingMatchDisplay"
        android:layout_centerHorizontal="true"
        android:text="TextView"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvMatchTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Match Time:"
        android:layout_below="@+id/tvAddedByMatchDisplay"
        android:layout_toStartOf="@+id/tvAddedByMatchDisplay" />

    <TextView
        android:id="@+id/tvMatchDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Match Day:"
        android:layout_below="@+id/tvMatchTime"
        android:layout_alignEnd="@+id/tvMatchTime" />

    <Switch
        android:id="@+id/switchPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvMatchDay"
        android:layout_toEndOf="@+id/tvAddedByMatchDisplay"
        android:text="@string/can_you_play"
        android:textAppearance="@android:style/TextAppearance.Material.Small" />

    <Button
        android:id="@+id/btnPlayingConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Response"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="41dp" />

</RelativeLayout>