<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/squad_logo" />

    <TextView
        android:id="@+id/tvHeadingMatchDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You have been added to this match by: "
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_above="@+id/tvAddedByMatchDisplay"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp" />

    <TextView
        android:id="@+id/tvAddedByMatchDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="14sp"
        android:layout_above="@+id/tvMatchTime"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/tvMatchTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Match Time:"
        android:layout_above="@+id/tvMatchDay"
        android:layout_alignStart="@+id/imageView3" />

    <TextView
        android:id="@+id/tvMatchDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnPlayingConfirm"
        android:layout_alignStart="@+id/tvMatchTime"
        android:layout_marginBottom="10dp"
        android:text="Match Day:" />

    <Switch
        android:id="@+id/switchPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvMatchDay"
        android:layout_alignEnd="@+id/imageView3"
        android:switchTextAppearance="@android:style/TextAppearance.Material.Small"
        android:text="@string/can_you_play"
        android:textAppearance="@android:style/TextAppearance.Material.Small" />

    <Button
        android:id="@+id/btnPlayingConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Response"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp"
        android:textColor="@color/colorText"
        android:background="@color/colorPrimary"/>

</RelativeLayout>